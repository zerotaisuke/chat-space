
.chat-space

  .users
    %section.userinfo
      %span.userinfo__header--username
        = current_user.name
      %ul.userinfo__header--lists
        %li
        =link_to new_group_path do
          =fa_icon 'edit',class: 'icon'
        %li
        =link_to edit_user_path(current_user) do
          =fa_icon 'cog',class: 'icon'

    .usergroup
      .usergroup-list
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .usergroup-name
              = group.name
            .usergroup-new-message
              メッセージはまだありません。
        / %ul.usergroup
        /   %li.usergroup-name groupname
        /   %li.usergroup-new-message newmessage

  .messages
    %section.messages__group-nav
      %span.messages__group-name
        groupname
      %span.messages__edit-btn
        %p.messages__edit-btn_inner
          Edit
      %span.messages__member
        member
    %section.messages__show
      %ul
        %li.messages__show_name name
        %li.messages__show_date date
      %span.messages__show_message
        message
    %section.message__send
      .message__send_input
        %p.comment sample text
        %i.far.fa-image.image

      %span.messages__send-btn
        %span.comment Send
