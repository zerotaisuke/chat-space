
.chat-space
  = render 'shared/side_bar'

  .chat
    %section.header
      %span.left-header__title
        =@group.name
      %span.messages__edit-btn

        %p.messages__edit-btn_inner
          Edit
      %span.left-header__member
        member

    .messages
      = render @messages

    .form
      = form_for [@group, @message], html: { id: 'SendMessage'} do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
